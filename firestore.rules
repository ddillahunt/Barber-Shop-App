rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /appointments/{document=**} {
      // Public can create appointments only
      allow create: if true;
      // Public can read booked times (needed for availability check)
      allow read: if true;
      // Only authenticated admin can update/delete
      allow update, delete: if request.auth != null;
    }
    match /messages/{document=**} {
      // Public can create messages (contact form)
      allow create: if true;
      // Only authenticated admin can read/update/delete
      allow read, update, delete: if request.auth != null;
    }
    match /barbers/{document=**} {
      // Public can read barber info (needed for booking form)
      allow read: if true;
      // Only authenticated admin can create/update/delete
      allow create, update, delete: if request.auth != null;
    }
  }
}
